{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Chrultrabook Windows Controller",
    "version": "2.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true,
        "center": true      
      }
      
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "org.chrultrabookcontroller.chrultrabookcontroller",
      "copyright": "GPL-3.0",
      "icon": [
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "decorations": false,
        "fullscreen": false,
        "resizable": false,
        "title": "Chrultrabook Windows Controller",
        "width": 800,
        "height": 550,
        "transparent": true
      }
    ]
  }
}
